# ==========================================
# LLM Data Lab Backend Configuration
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==========================================
# Authentication & Security
# ==========================================
# IMPORTANT: Change these in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=43200

# Optional: Separate key for encrypting stored provider credentials
# If not set, will derive from JWT_SECRET_KEY
CREDENTIALS_SECRET_KEY=your-credentials-encryption-key-change-this

# ==========================================
# Database
# ==========================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./llm_data_lab.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost/llm_data_lab

# ==========================================
# OpenAI Configuration (Optional)
# ==========================================
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODELS=gpt-4o,gpt-4o-mini,gpt-4.1

# ==========================================
# Anthropic Configuration (Optional)
# ==========================================
ANTHROPIC_API_KEY=
ANTHROPIC_DEFAULT_MODELS=claude-3-sonnet-20240229,claude-3-haiku-20240307

# ==========================================
# DeepSeek Configuration (Optional)
# ==========================================
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_DEFAULT_MODELS=deepseek-chat,deepseek-coder

# ==========================================
# Qwen (DashScope) Configuration (Optional)
# ==========================================
DASHSCOPE_API_KEY=
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com
DASHSCOPE_DEFAULT_MODELS=qwen-turbo,qwen-plus,qwen-max

# ==========================================
# SiliconFlow Configuration (Optional)
# ==========================================
SILICONFLOW_API_KEY=
SILICONFLOW_BASE_URL=https://api.siliconflow.cn
SILICONFLOW_DEFAULT_MODELS=Qwen/Qwen2.5-7B-Instruct,deepseek-ai/DeepSeek-V2.5

# ==========================================
# Code Execution Limits
# ==========================================
# Maximum execution time for user code (seconds)
MAX_CODE_EXECUTION_SECONDS=60

# Maximum memory for user code execution (MB)
MAX_CODE_EXECUTION_MEMORY_MB=512

# ==========================================
# File Storage Paths
# ==========================================
# Directory for user uploaded datasets
UPLOAD_DIR=./uploaded_datasets

# Directory for generated analysis artifacts (plots, reports, etc.)
ARTIFACTS_DIR=./analysis_artifacts
